<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="3"
       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:paddingTop="20dp"
            android:src="@drawable/kidzee_logo"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="fill_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginTop="7dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingBottom="15dp"
               android:weightSum="3">
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_weight="1">
               <android.support.v7.widget.CardView
                   android:layout_width="95dp"
                   android:layout_height="95dp"
                   card_view:contentPadding="6dp"
                   android:layout_gravity="center"
                   android:id="@+id/cv11"
                   android:foreground="?android:attr/selectableItemBackground"
                   card_view:cardElevation="0dp"
                   card_view:cardBackgroundColor="#026b8e"
                   card_view:cardCornerRadius="15dp" >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:weightSum="3"
                       android:orientation="vertical">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:src="@drawable/ic_account_circle_white_48dp"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="fill_parent"
                           android:layout_gravity="center"
                           android:gravity="center"
                           android:layout_weight="2"
                           android:textColor="#fff"
                           android:text="Profile"/>
                   </LinearLayout>
               </android.support.v7.widget.CardView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_weight="1">
                   <android.support.v7.widget.CardView
                       android:layout_width="95dp"
                       android:layout_height="95dp"
                       card_view:contentPadding="6dp"
                       android:id="@+id/cv12"
                       android:foreground="?android:attr/selectableItemBackground"
                       card_view:cardElevation="0dp"
                       card_view:cardBackgroundColor="#026b8e"
                       card_view:cardCornerRadius="15dp" >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="fill_parent"
                               android:layout_height="fill_parent"
                               android:layout_weight="1"
                               android:layout_margin="3dp"
                               android:src="@drawable/ic_place_white_48dp"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="fill_parent"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_weight="2"
                               android:textColor="#fff"
                               android:text="Track"/>
                       </LinearLayout>
                   </android.support.v7.widget.CardView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_weight="1">
                   <android.support.v7.widget.CardView
                       android:layout_width="95dp"
                       android:layout_height="95dp"
                       card_view:contentPadding="6dp"
                       android:id="@+id/cv13"
                       android:foreground="?android:attr/selectableItemBackground"
                       card_view:cardElevation="0dp"
                       card_view:cardBackgroundColor="#026b8e"
                       card_view:cardCornerRadius="15dp" >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="fill_parent"
                               android:layout_height="fill_parent"
                               android:layout_weight="1"
                               android:layout_margin="3dp"
                               android:src="@drawable/ic_drive_eta_white_48dp"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="fill_parent"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_weight="2"
                               android:textColor="#fff"
                               android:text="Driver"/>
                       </LinearLayout>
                   </android.support.v7.widget.CardView>
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3">
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_weight="1">
                   <android.support.v7.widget.CardView
                       android:layout_width="95dp"
                       android:layout_height="95dp"
                       card_view:contentPadding="6dp"
                       android:layout_gravity="center"
                       android:id="@+id/cv21"
                       android:foreground="?android:attr/selectableItemBackground"
                       card_view:cardElevation="0dp"
                       card_view:cardBackgroundColor="#026b8e"
                       card_view:cardCornerRadius="15dp" >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="fill_parent"
                               android:layout_height="fill_parent"
                               android:layout_weight="1"
                               android:layout_margin="3dp"

                               android:src="@drawable/ic_notifications_white_48dp"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="fill_parent"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_weight="2"
                               android:textColor="#fff"
                               android:text="Notification"/>
                       </LinearLayout>
                   </android.support.v7.widget.CardView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_weight="1">
                   <android.support.v7.widget.CardView
                       android:layout_width="95dp"
                       android:layout_height="95dp"
                       card_view:contentPadding="6dp"
                       android:id="@+id/cv22"
                       android:foreground="?android:attr/selectableItemBackground"
                       card_view:cardElevation="0dp"
                       card_view:cardBackgroundColor="#026b8e"
                       card_view:cardCornerRadius="15dp" >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="fill_parent"
                               android:layout_height="fill_parent"
                               android:layout_weight="1"
                               android:layout_margin="3dp"
                               android:src="@drawable/ic_speaker_notes_white_48dp"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="fill_parent"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_weight="2"
                               android:textColor="#fff"
                               android:text="Feedback"/>
                       </LinearLayout>
                   </android.support.v7.widget.CardView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_weight="1">
                   <android.support.v7.widget.CardView
                       android:layout_width="95dp"
                       android:layout_height="95dp"
                       card_view:contentPadding="6dp"
                       android:id="@+id/cv23"
                       android:foreground="?android:attr/selectableItemBackground"
                       card_view:cardElevation="0dp"
                       card_view:cardBackgroundColor="#026b8e"
                       card_view:cardCornerRadius="15dp" >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:weightSum="3"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="fill_parent"
                               android:layout_height="fill_parent"
                               android:layout_weight="1"
                               android:layout_margin="3dp"
                               android:src="@drawable/ic_school_white_48dp"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="fill_parent"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:layout_weight="2"
                               android:textColor="#fff"
                               android:text="School"/>
                       </LinearLayout>
                   </android.support.v7.widget.CardView>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>

   </LinearLayout>
</LinearLayout>
